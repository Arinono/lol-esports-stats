datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  uid   String @id @default("")
}

enum Role {
  Top
  Mid
  Jungle
  Support
  Bot
  Unknown
}

enum ChampionAttribute {
  Tank
  Mage
  Assassin
  Marksman
  Support
  Fighter
}

enum ChampionRange {
  Ranged
  Melee
  Switches
  Unknown
}

enum DamageType {
  Hybrid
  Physical
  Magical
  MagicalTrue
  Unknown
}

model Champion {
  uid                         Int @id @default(autoincrement())
  name                        String
  title                       String
  releaseDate                 String
  BE                          Int
  RP                          Int
  attributes                  ChampionAttribute[]
  resource                    String
  health                      Float
  HPLevel                     Int
  HPRegen                     Float
  HPRegenLevel                Float
  mana                        Float
  manaLevel                   Float
  manaRegen                   Float
  manaRegenLevel              Float
  energy                      Int
  energyRegen                 Int
  movespeed                   Int
  attackDamage                Float
  ADLevel                     Float
  attackSpeed                 Float
  ASLevel                     Float
  attackRange                 Int
  armor                       Int
  armorLevel                  Float
  magicResist                 Float
  magicResistLevel            Float
  pronoun                     String
  championRange               ChampionRange @default(Unknown)
  damageType                  DamageType @default(Unknown)
  CCLevel                     Int @default(-1)
  burstLevel                  Int @default(-1)
  sustainedLevel              Int @default(-1)
  tankLevel                   Int @default(-1)
  goal                        String @default("")
  strengths                   String @default("")
  weaknesses                  String @default("")
  ultimate                    String @default("")
  mechanic                    String @default("")
  roles                       Role[]
}
